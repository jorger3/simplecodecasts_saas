<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url(:thumb) %>
    </div>
    <div class="col-md-9">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %><br></h3>
        <% if current_user.plan_id == 2 || current_user.id == @user.id %>
            <%= @user.profile.phone_number %><br>
            <%= @user.profile.contact_email %><br>
        <% end %>
        <div class="well">
            <%= @user.profile.description %><br>
        </div>
    </div>
</div>